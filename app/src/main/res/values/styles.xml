<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Base.Theme.BmxSpots" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:windowBackground">@color/background_material_light</item>
    </style>

    <style name="AppBaseTheme" parent="Base.Theme.BmxSpots">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="SocialButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">@dimen/btn_flat_min_width</item>
        <item name="android:minHeight">@dimen/btn_flat_min_height</item>
        <item name="android:layout_width">@dimen/btn_flat_width</item>
        <item name="android:layout_height">@dimen/btn_flat_height</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_social_btn</item>
        <item name="android:paddingLeft">@dimen/btn_flat_padding</item>
        <item name="android:paddingRight">@dimen/btn_flat_padding</item>
        <item name="android:layout_margin">@dimen/btn_flat_margin</item>
        <item name="android:drawablePadding">@dimen/btn_flat_drawable_padding</item>
        <item name="android:elevation" tools:targetApi="lollipop">@dimen/elevation_social_btn</item>
    </style>

</resources>
